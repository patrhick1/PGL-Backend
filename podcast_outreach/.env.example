# PGL Podcast Outreach - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (Required)
# ===========================================
# Sign up for Neon PostgreSQL: https://neon.tech
PGHOST=your-project-name.neon.tech
PGPORT=5432
PGDATABASE=your-database-name
PGUSER=your-username
PGPASSWORD=your-password

# ===========================================
# API KEYS (Get your own keys from these services)
# ===========================================

# Google AI (Gemini) - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API=your-openai-api-key

# Anthropic - https://console.anthropic.com/settings/keys
ANTHROPIC_API=your-anthropic-api-key

# Listen Notes - https://www.listennotes.com/api/
LISTEN_NOTES_API_KEY=your-listen-notes-api-key

# Podscan - https://podscan.fm/api
PODSCANAPI=your-podscan-api-key

# Instantly - https://instantly.ai
INSTANTLY_API_KEY=your-instantly-api-key

# Tavily - https://tavily.com
TAVILY_API_KEY=your-tavily-api-key

# ===========================================
# GOOGLE SERVICES (Optional)
# ===========================================
# For Google Drive integration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GOOGLE_PODCAST_INFO_FOLDER_ID=your-google-drive-folder-id
PGL_AI_DRIVE_FOLDER_ID=your-google-drive-folder-id

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Generate a random secret key (use: openssl rand -hex 32)
SESSION_SECRET_KEY=your-secret-session-key-here

# Server port
PORT=8000

# Set to true for production
IS_PRODUCTION=false

# Frontend URL (if you have a separate frontend)
FRONTEND_ORIGIN=http://localhost:5173

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# FEATURE FLAGS & LIMITS
# ===========================================

# Enable test dashboard
ENABLE_LLM_TEST_DASHBOARD=false

# Discovery limits
FREE_PLAN_DAILY_DISCOVERY_LIMIT=10
FREE_PLAN_WEEKLY_DISCOVERY_LIMIT=50
PAID_PLAN_DAILY_DISCOVERY_LIMIT=100
PAID_PLAN_WEEKLY_DISCOVERY_LIMIT=500

# ===========================================
# WORKER SETTINGS (Advanced)
# ===========================================

# Concurrency settings
EPISODE_SYNC_MAX_CONCURRENT_TASKS=10
GEMINI_TRANSCRIPTION_MAX_RETRIES=3
GEMINI_TRANSCRIPTION_RETRY_DELAY=5
GEMINI_API_CONCURRENCY=10
DOWNLOAD_CONCURRENCY=5
TRANSCRIBER_MAX_EPISODES_PER_BATCH=20

# API rate limiting
LISTENNOTES_PAGE_SIZE=10
PODSCAN_PAGE_SIZE=10
API_CALL_DELAY=1.0

# ===========================================
# OPTIONAL: External paths
# ===========================================
# FFMPEG_CUSTOM_PATH=/usr/local/bin/ffmpeg
# FFPROBE_CUSTOM_PATH=/usr/local/bin/ffprobe